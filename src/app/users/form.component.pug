am-navbar

am-spinner(*ngIf="isLoading")
.container(*ngIf="!isLoading && user")
  .row
    .col
      h2
        span(*ngIf="userId") Edit User
        span(*ngIf="!userId") Create User
        hr

  form(#userForm="ngForm" '(ngSubmit)'="saveUser()")
    .row
      label.col-md-3.col-form-label(for="name") Name*
      .col-md-9
        input.form-control(
          id="name"
          name="name"
          type="text"
          placeholder="Name"
          required="true"
          #name="ngModel"
          '[(ngModel)]'="user.name"
          '[disabled]'="isSaving"
          '[ngClass]'="{ 'is-invalid': name.invalid && (name.dirty || name.touched)}"
        )
        .invalid-feedback Name is required

    .row
      label.col-md-3.col-form-label(for="email") Email*
      .col-md-9
        input.form-control(
          id="email"
          name="email"
          type="email"
          placeholder="Email"
          required="true"
          #email="ngModel"
          '[(ngModel)]'="user.email"
          '[disabled]'="isSaving"
          '[ngClass]'="{ 'is-invalid': email.invalid && (email.dirty || email.touched)}"
        )
        .invalid-feedback Email is required

    .row.buttons.text-end
      .col
        a.btn.btn-light(routerLink="/users") Cancel
        button.btn.btn-primary(
          type="submit"
          '[disabled]'="!userForm.form.valid || isSaving"
        ) Save
